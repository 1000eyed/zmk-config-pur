#define COMBO_TERM_COMMON 40

/ {
    combos {
        compatible = "zmk,combos";

        combo_esc {
          timeout-ms = <50>;
          global-quick-tap-ms = <COMBO_TERM_COMMON>;
          key-positions = <2 3>;
          bindings = <&kp ESC>;
        };
        combo_enter {
          timeout-ms = <50>;
          global-quick-tap-ms = <COMBO_TERM_COMMON>;
          key-positions = <3 4>;
          bindings = <&kp ENTER>;
        };
    };
};
